---
import Footer from "../components/Footer.astro";
import NavBar from "../components/Navbar.astro";
import background from "../assets/background.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Rifqi Mufidianto Web Portofolio.">
    <meta name="keywords" content="Rifqi, Mufidianto, Mufiidz, Mufidz, Arctix Melody">
    <meta name="author" content="Rifqi Mufidianto">
    <title>Rifqi Mufidianto</title>
  </head>
  <NavBar />
  <body class="w-screen h-screen">
    <div class="relative">
      <div>
        <img
          id="background"
          src={background.src}
          alt="background"
          fetchpriority="high"
          loading="lazy"
        />
        <div>
          <slot />
        </div>
      </div>
    </div>
  </body>
  <Footer />
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html,
  body {
    margin: 0;
    color: #fff;
  }
  html.dark {
    background-color: #000000;
    color: #fff;
  }
  .dark .nav-links a {
    color: #fff;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    user-select: none;
  }
  .dark #background {
    filter: brightness(50%) contrast(120%);
  }
</style>
