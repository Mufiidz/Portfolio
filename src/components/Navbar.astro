---
import ThemeButton from "./ThemeButton.astro";
---

<header class="w-full lg:w-screen sticky top-0 left-0 z-10">
  <div>
    <nav class="mx-auto flex items-center justify-between px-8 py-4">
      <a href="/">
        <h1 class="text-2xl font-bold">Rifqi Mufidianto</h1>
      </a>
      <div class="pr-20">
        <ThemeButton />
      </div>
    </nav>
  </div>
</header>

<script>
  window.onscroll = function () {
    const header = document.querySelector("header");
    const isDark = document.documentElement.classList.contains("dark");
    if (window.scrollY > 0) {
      header?.classList.add(
        "bg-[rgba(255,255,255,0.1)]",
        "backdrop-blur-md"
      );
    } else {
      header?.classList.remove(
        "bg-[rgba(255,255,255,0.1)]",
        "backdrop-blur-md"
      );
    }
  };
</script>
