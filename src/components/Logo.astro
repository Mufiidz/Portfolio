---
import Image from "astro/components/Image.astro";
import logo from "../assets/logo.png";

const { ...attrs } = Astro.props;
---

<Image src={logo} alt="Logo" {...attrs} />

<style>
  img {
    pointer-events: none;
    user-select: none;
    filter: invert();
  }
  /* :global(.dark) img {
    filter: invert();
  } */
</style>
